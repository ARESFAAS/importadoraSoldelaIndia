            </div>
        </div>
    </div>
    <div id="divBody" class="container body-content">
        @RenderBody()
        <hr />
        <br /><br />
    </div>
    <hr />
    <footer style="text-align:center;">
        <p>&copy; @DateTime.Now.Year - Importadora Sol de la India - Marca registrada - Quito, Ecuador</p>
    </footer>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
