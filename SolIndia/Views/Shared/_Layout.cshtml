        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sol de la India", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { Class = "homeLink", href = Url.Action("Index", "Home") })</li>
                    <li>@Html.ActionLink("Quienes Somos", "About", "Home")</li>
                    <li>@Html.ActionLink("Nuestra Empresa", "Business", "Home")</li>
                    <li>@Html.ActionLink("Productos", "Products", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
                <div id="divSocial" style="margin-top:0.4em;">
                    <a href="http://www.facebook.com/sharer.php?u=http://www.importadorasoldelaindia.com&t=ImportadoraSoldelaIndia" target="_blank" class="btn btn-social-icon btn-md btn-facebook" style="margin-left:5em;width:15px;height:15px;">
                        <span class="fa fa-facebook"></span>
                        <div data-href="https://www.importadorasoldelaindia.com" data-layout="icon" style="margin-left:1em;"></div>
                    </a>
                    <a href="https://plus.google.com/share?url=http://www.importadorasoldelaindia.com" target="_blank" class="btn btn-social-icon btn-md btn-google" style="width:15px;height:15px;">
                        <span class="fa fa-google-plus"></span>
                        <div data-action="share" data-annotation="none"></div>
                    </a>
                    <a href="http://twitter.com/share?url=http://wwww.importadorasoldelaindia.com&text=ImportadoraSoldelaIndia" target="_blank" class="btn btn-social-icon btn-md btn-twitter" style="width:15px;height:15px;">
                        <span class="fa fa-twitter"></span>
                    </a>
                </div>
